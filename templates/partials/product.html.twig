<div class="col-lg-3 col-md-4 col-6">
    <div class="product">
        <div class="product_img">
            <a href="">
                <img height="300" src="/assets/uploads/products/{{ productNewArrival.image }}" alt="{{productNewArrival.name}}">
            </a>
            <div class="product_action_box">
                <ul class="list_none pr_action_btn">
                    <li class="add-to-cart"><a href="#"><i class="icon-basket-loaded"></i> Add To Cart</a></li>
                    <li><a href="" class=""><i class="icon-shuffle"></i></a></li>
                    <li><a href="" class=""><i class="icon-magnifier-add"></i></a></li>
                    <li><a href="#"><i class="icon-heart"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="product_info">
            <h6 class="product_title"><a href="">{{productNewArrival.name}}</a></h6>
            <div class="product_price">
                <span class="price">$ {{productNewArrival.price / 100}}</span>
                <del>$ {{productNewArrival.price * 1.35/ 100}}</del>
                <div class="on_sale">
                    <span>35% Off</span>
                </div>
            </div>
            <div class="rating_wrap">
                <div class="rating">
                    <div class="product_rate" style="width:80%"></div>
                </div>
                <span class="rating_num">{{ productNewArrival.reviewsProducts | length }}</span>
            </div>
            <div class="pr_desc">
                <p>{{ productNewArrival.description }}</p>
            </div>
            <div class="pr_switch_wrap">
                <div class="product_color_switch">
                    <span class="active" data-color="#87554B"></span>
                    <span data-color="#333333"></span>
                    <span data-color="#DA323F"></span>
                </div>
            </div>
        </div>
    </div>
</div>
